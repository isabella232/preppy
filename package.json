{
  "name": "preppy",
  "version": "10.5.3",
  "description": "A simple and lightweight tool for preparing the publish of NPM packages.",
  "keywords": [
    "npm",
    "publish",
    "prepare",
    "release",
    "library",
    "tooling",
    "rollup",
    "babel"
  ],
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=4.0.0",
    "yarn": ">=1.0.0"
  },
  "bin": {
    "preppy": "bin/preppy"
  },
  "files": [
    "bin/"
  ],
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "http://sebastian-software.de/werner"
  },
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint '**/*.js'",
    "format": "effective-prettier '**/*.{js,jsx,ts,tsx,json,md}'",
    "release": "git push && release-it --ci patch",
    "release:minor": "git push && release-it --ci minor",
    "release:major": "git push && release-it --ci major",
    "test": "npm run prepare && jest",
    "prepare": "rimraf bin && babel-node src/cli.js"
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/index.test.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/preppy.git"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "acorn-jsx": "^5.2.0",
    "builtin-modules": "^3.1.0",
    "chalk": "^4.1.0",
    "core-js": "^3.6.5",
    "estree-walker": "^2.0.1",
    "figures": "^3.2.0",
    "find-root": "^1.1.0",
    "is-ci": "^2.0.0",
    "lodash": "^4.17.20",
    "log-symbols": "^4.0.0",
    "magic-string": "^0.25.7",
    "meow": "^7.1.0",
    "node-notifier": "^8.0.0",
    "ora": "^5.0.0",
    "pretty-bytes": "^5.3.0",
    "rollup": "^2.23.1",
    "rollup-plugin-advanced-run": "^2.0.0",
    "rollup-plugin-executable": "^1.6.0",
    "rollup-plugin-rebase": "^3.5.4",
    "rollup-plugin-terser": "^7.0.0",
    "stack-trace": "^0.0.10",
    "strip-bom": "^4.0.0",
    "strip-json-comments": "^3.1.1",
    "to-regex": "^3.0.2",
    "universalify": "^2.0.0",
    "update-notifier": "^4.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@effective/eslint-config": "^3.8.0",
    "@effective/prettier": "^4.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.3.0",
    "babel-plugin-lodash": "^3.3.4",
    "codecov": "^3.7.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "execa": "^4.0.3",
    "jest": "^26.4.2",
    "p-queue": "^6.6.1",
    "pify": "^5.0.0",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "release-it": "^13.7.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  }
}
