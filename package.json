{
  "name": "simplepublish",
  "version": "1.4.3",
  "description": "Simple and lightweight (in dependencies) JavaScript-only prepublishing tool (bundling and transpiling) for publishing NPM packages.",
  "keywords": [
    "npm",
    "publish",
    "prepublish",
    "prepare",
    "release",
    "library",
    "api",
    "tooling",
    "rollup",
    "babel"
  ],
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=4.0.0",
    "yarn": ">=1.0.0"
  },
  "bin": {
    "simplepublish": "lib/index.js"
  },
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "http://sebastian-software.de/werner"
  },
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "scripts": {
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "test": "rimraf test/lib && npm run prepare && jest",
    "prepare": "rimraf bin && rollup -c rollup.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/simplepublish.git"
  },
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "async": "^2.5.0",
    "babel-core": "^6.26.0",
    "babel-plugin-fast-async": "^6.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-runtime": "^6.26.0",
    "chalk": "^2.1.0",
    "file-exists": "^5.0.0",
    "lodash": "^4.17.4",
    "meow": "^3.7.0",
    "nodent-runtime": "^3.0.4",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-yaml": "^1.1.0"
  },
  "devDependencies": {
    "jest": "^21.2.1",
    "rimraf": "^2.6.2"
  }
}
