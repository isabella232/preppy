{
  "name": "preppy",
  "version": "8.3.0",
  "description": "A simple and lightweight tool for preparing the publish of NPM packages.",
  "keywords": [
    "npm",
    "publish",
    "prepare",
    "release",
    "library",
    "tooling",
    "rollup",
    "babel"
  ],
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=4.0.0",
    "yarn": ">=1.0.0"
  },
  "bin": {
    "preppy": "bin/preppy"
  },
  "files": [
    "bin/"
  ],
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "http://sebastian-software.de/werner"
  },
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint .",
    "fix": "eslint --fix .",
    "format": "prettier --write '**/*.js' && npm run fix",
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "test": "jest --coverage",
    "prepare": "rimraf bin && babel-node src/cli.js"
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/index.test.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/preppy.git"
  },
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "acorn-jsx": "^5.0.1",
    "chalk": "^2.4.2",
    "core-js": "^3.1.4",
    "estree-walker": "^0.6.1",
    "figures": "^3.0.0",
    "find-root": "^1.1.0",
    "is-ci": "^2.0.0",
    "lodash": "^4.17.15",
    "log-symbols": "^3.0.0",
    "magic-string": "^0.25.3",
    "meow": "^5.0.0",
    "node-notifier": "^5.4.1",
    "ora": "^3.4.0",
    "pretty-bytes": "^5.3.0",
    "rollup": "^1.19.3",
    "rollup-plugin-advanced-run": "^1.1.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-executable": "^1.5.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-rebase": "^3.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "stack-trace": "^0.0.10",
    "strip-bom": "^4.0.0",
    "strip-json-comments": "^3.0.1",
    "to-regex": "^3.0.2",
    "universalify": "^0.1.2",
    "update-notifier": "^3.0.1"
  },
  "peerDependencies": {
    "typescript": "3.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@effective/eslint-config": "^0.8.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "codecov": "^3.5.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "fast-async": "^7.0.6",
    "jest": "^24.8.0",
    "pify": "^4.0.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "typescript": "^3.5.1"
  }
}
