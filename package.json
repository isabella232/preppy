{
  "name": "preppy",
  "version": "10.2.1",
  "description": "A simple and lightweight tool for preparing the publish of NPM packages.",
  "keywords": [
    "npm",
    "publish",
    "prepare",
    "release",
    "library",
    "tooling",
    "rollup",
    "babel"
  ],
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=4.0.0",
    "yarn": ">=1.0.0"
  },
  "bin": {
    "preppy": "bin/preppy"
  },
  "files": [
    "bin/"
  ],
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "http://sebastian-software.de/werner"
  },
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint '**/*.js'",
    "format": "prettier --write '**/*.{json,md}' && effective-prettier '**/*.{js,jsx,ts,tsx}'",
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "test": "jest --coverage",
    "prepare": "rimraf bin && babel-node src/cli.js"
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/index.test.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/preppy.git"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.2",
    "acorn-jsx": "^5.2.0",
    "builtin-modules": "^3.1.0",
    "chalk": "^4.0.0",
    "core-js": "^3.6.5",
    "estree-walker": "^2.0.1",
    "figures": "^3.2.0",
    "find-root": "^1.1.0",
    "is-ci": "^2.0.0",
    "lodash": "^4.17.15",
    "log-symbols": "^4.0.0",
    "magic-string": "^0.25.7",
    "meow": "^7.0.0",
    "node-notifier": "^7.0.0",
    "ora": "^4.0.4",
    "pretty-bytes": "^5.3.0",
    "rollup": "^2.8.2",
    "rollup-plugin-advanced-run": "^2.0.0",
    "rollup-plugin-executable": "^1.5.3",
    "rollup-plugin-rebase": "^3.3.3",
    "rollup-plugin-terser": "^5.3.0",
    "stack-trace": "^0.0.10",
    "strip-bom": "^4.0.0",
    "strip-json-comments": "^3.1.0",
    "to-regex": "^3.0.2",
    "universalify": "^1.0.0",
    "update-notifier": "^4.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@effective/eslint-config": "^2.6.2",
    "@effective/prettier": "^2.2.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-lodash": "^3.3.4",
    "codecov": "^3.6.5",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "fast-async": "^7.0.6",
    "jest": "^26.0.1",
    "p-queue": "^6.4.0",
    "pify": "^5.0.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  }
}
