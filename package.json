{
  "name": "preppy",
  "version": "7.2.0",
  "description": "A simple and lightweight tool for preparing the publish of NPM packages.",
  "keywords": [
    "npm",
    "publish",
    "prepare",
    "release",
    "library",
    "tooling",
    "rollup",
    "babel"
  ],
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=4.0.0",
    "yarn": ">=1.0.0"
  },
  "bin": {
    "preppy": "bin/preppy"
  },
  "files": [
    "bin/"
  ],
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "http://sebastian-software.de/werner"
  },
  "license": "Apache-2.0",
  "scripts": {
    "lint:js": "eslint .",
    "fix:js": "eslint --fix .",
    "format:js": "prettier --write '**/*.js' && npm run fix:js",
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "test": "jest --coverage",
    "prepare": "rimraf bin && babel-node src/cli.js"
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/index.test.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/preppy.git"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "figures": "^2.0.0",
    "find-root": "^1.1.0",
    "lodash": "^4.17.11",
    "meow": "^5.0.0",
    "ora": "^3.0.0",
    "pretty-bytes": "^5.1.0",
    "rollup": "^0.68.1",
    "rollup-plugin-babel": "^4.1.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-executable": "^1.3.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-run": "^1.1.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-yaml": "^1.1.0",
    "stack-trace": "0.0.10",
    "to-regex": "^3.0.2",
    "typescript": "^3.2.2",
    "update-notifier": "^2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/node": "7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-runtime": "7.2.0",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.10.0",
    "eslint-config-readable": "^2.3.0",
    "fast-async": "^7.0.6",
    "jest": "^23.6.0",
    "pify": "^4.0.1",
    "rimraf": "^2.6.2"
  }
}
