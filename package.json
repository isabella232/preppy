{
  "name": "preppy",
  "version": "4.3.2",
  "description": "A simple and lightweight tool for preparing the publish of NPM packages.",
  "keywords": [
    "npm",
    "publish",
    "prepare",
    "release",
    "library",
    "tooling",
    "rollup",
    "babel"
  ],
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=4.0.0",
    "yarn": ">=1.0.0"
  },
  "bin": {
    "preppy": "bin/preppy"
  },
  "files": [
    "bin/"
  ],
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "http://sebastian-software.de/werner"
  },
  "license": "Apache-2.0",
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore .",
    "fix:js": "eslint --ignore-path .gitignore --fix .",
    "format:js": "prettier --ignore-path .gitignore --write '**/*.{js,mjs}' && npm run fix:js",
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "test": "npm run prepare && jest",
    "prepare": "rimraf bin && cross-env BABEL_ENV=test babel-node src/cli.js"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/preppy.git"
  },
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "async": "^2.6.1",
    "chalk": "^2.4.1",
    "file-exists": "^5.0.1",
    "lodash": "^4.17.10",
    "meow": "^5.0.0",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^4.0.0-beta.4",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-yaml": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-rc.1",
    "@babel/core": "7.0.0-rc.1",
    "@babel/node": "7.0.0-rc.1",
    "@babel/plugin-transform-runtime": "7.0.0-rc.1",
    "@babel/preset-env": "7.0.0-rc.1",
    "@babel/runtime": "7.0.0-rc.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.3.0",
    "eslint-config-readable": "^2.1.3",
    "fast-async": "^7.0.6",
    "flow-bin": "^0.78.0",
    "jest": "^23.4.2",
    "pify": "^4.0.0",
    "rimraf": "^2.6.2"
  }
}
